# Netlify _headers file for proper MIME types and performance
# This file provides additional control over HTTP headers

# JavaScript files - Fix MIME type issues
/*.js
  Content-Type: text/javascript; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Assets JavaScript files (Vite chunks)
/assets/*.js
  Content-Type: text/javascript; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# ES Module files
/*.mjs
  Content-Type: text/javascript; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

# CSS files
/*.css
  Content-Type: text/css; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

# Assets CSS files
/assets/*.css
  Content-Type: text/css; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

# HTML files - No cache for SPA routing
/*.html
  Content-Type: text/html; charset=utf-8
  Cache-Control: no-cache, no-store, must-revalidate
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin

# Root HTML
/
  Content-Type: text/html; charset=utf-8
  Cache-Control: no-cache, no-store, must-revalidate
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  X-Content-Type-Options: nosniff

# Images
/*.png
  Content-Type: image/png
  Cache-Control: public, max-age=31536000, immutable

/*.jpg
  Content-Type: image/jpeg
  Cache-Control: public, max-age=31536000, immutable

/*.jpeg
  Content-Type: image/jpeg
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Content-Type: image/svg+xml
  Cache-Control: public, max-age=31536000, immutable

/*.webp
  Content-Type: image/webp
  Cache-Control: public, max-age=31536000, immutable

# Fonts
/*.woff2
  Content-Type: font/woff2
  Cache-Control: public, max-age=31536000, immutable

/*.woff
  Content-Type: font/woff
  Cache-Control: public, max-age=31536000, immutable

# Videos
/*.mp4
  Content-Type: video/mp4
  Cache-Control: public, max-age=31536000, immutable

/*.webm
  Content-Type: video/webm
  Cache-Control: public, max-age=31536000, immutable

# JSON files
/*.json
  Content-Type: application/json; charset=utf-8
  Cache-Control: public, max-age=3600
